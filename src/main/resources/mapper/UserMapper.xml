<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yeexang.community.dao.UserDao">

    <sql id="y_c_user">
        u.id,
        u.account,
        u.username,
        u.password,
        u.exp,
        u.create_time,
        u.create_user,
        u.update_time,
        u.update_user,
        u.del_flag
    </sql>

    <sql id="User">
        #{id},
        #{account},
        #{username},
        #{password},
        #{exp},
        #{createTime},
        #{createUser},
        #{updateTime},
        #{updateUser},
        #{delFlag}
    </sql>

    <sql id="where_condition">
        <if test="id != null and id != ''">
            AND u.id = #{id}
        </if>
        <if test="account != null and account != ''">
            AND u.account = #{account}
        </if>
        <if test="username != null and username != ''">
            AND u.username = #{username}
        </if>
        <if test="password != null and password != ''">
            AND u.password = #{password}
        </if>
        <if test="exp != null and exp >= 0">
            AND u.exp = #{exp}
        </if>
        <if test="createTime != null">
            AND u.create_time = #{createTime}
        </if>
        <if test="createUser != null and createUser != ''">
            AND u.create_user = #{createUser}
        </if>
        <if test="updateTime != null">
            AND u.update_time = #{updateTime}
        </if>
        <if test="updateUser != null and updateUser != ''">
            AND u.update_user = #{updateUser}
        </if>
        <if test="delFlag != null">
            AND u.del_flag = #{delFlag}
        </if>
    </sql>

    <sql id="set_condition">
        u.id = #{id},
        u.account = #{account},
        u.username = #{username},
        u.password = #{password},
        u.exp = #{exp},
        u.create_time = #{createTime},
        u.create_user = #{createUser},
        u.update_time = #{updateTime},
        u.update_user = #{updateUser},
        u.del_flag = #{delFlag}
    </sql>

    <insert id="insert" parameterType="com.yeexang.community.entity.User">
        insert into y_c_user u values (<include refid="y_c_user"/>)
    </insert>

    <delete id="delete" parameterType="com.yeexang.community.entity.User">
        delete from y_c_user u
        <where>
            <include refid="where_condition"/>
        </where>
    </delete>

    <update id="update" parameterType="com.yeexang.community.entity.User">
        update y_c_user u
        <set>
            <include refid="set_condition"/>
        </set>
        <where>
            <include refid="where_condition"/>
        </where>
    </update>

    <select id="select" parameterType="com.yeexang.community.entity.User" resultType="com.yeexang.community.entity.User">
        select <include refid="y_c_user"/> from y_c_user
        <where>
            <include refid="where_condition"/>
        </where>
    </select>

</mapper>