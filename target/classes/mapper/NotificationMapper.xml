<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yeexang.community.dao.NotificationDao">

    <sql id="y_c_notification">
        n.id,
        n.notification_id,
        n.notifier,
        n.receiver,
        n.outer_id,
        n.notification_type,
        n.status,
        n.create_time,
        n.create_user,
        n.update_time,
        n.update_user,
        n.del_flag
    </sql>

    <sql id="Notification">
        #{id},
        #{notificationId},
        #{notifier},
        #{receiver},
        #{outerId},
        #{notificationType},
        #{status},
        #{createTime},
        #{createUser},
        #{updateTime},
        #{updateUser},
        #{delFlag}
    </sql>

    <sql id="where_condition">
        <if test="id != null and id != ''">
            AND n.id = #{id}
        </if>
        <if test="notificationId != null and notificationId != ''">
            AND n.notification_id = #{notificationId}
        </if>
        <if test="notifier != null and notifier != ''">
            AND n.nnotifier = #{notifier}
        </if>
        <if test="receiver != null and receiver != ''">
            AND n.receiver = #{receiver}
        </if>
        <if test="outerId != null and outerId != ''">
            AND n.outer_id = #{outerId}
        </if>
        <if test="notificationType != null and notificationType >= 0">
            AND n.notification_type = #{notificationType}
        </if>
        <if test="status != null">
            AND n.status = #{status}
        </if>
        <if test="createUser != null and createUser != ''">
            AND n.create_user = #{createUser}
        </if>
        <if test="updateUser != null and updateUser != ''">
            AND n.update_user = #{updateUser}
        </if>
        AND n.del_flag = 0
    </sql>

    <sql id="set_condition">
        <if test="notifier != null and notifier != ''">
            n.nnotifier = #{notifier}
        </if>
        <if test="receiver != null and receiver != ''">
            n.receiver = #{receiver}
        </if>
        <if test="outerId != null and outerId != ''">
            n.outer_id = #{outerId}
        </if>
        <if test="notificationType != null and notificationType >= 0">
            n.notification_type = #{notificationType}
        </if>
        <if test="status != null">
            n.status = #{status}
        </if>
        <if test="createTime != null">
            n.create_time = #{createTime}
        </if>
        <if test="createUser != null and createUser != ''">
            n.create_user = #{createUser}
        </if>
        <if test="updateTime != null">
            n.update_time = #{updateTime}
        </if>
        <if test="updateUser != null and updateUser != ''">
            n.update_user = #{updateUser}
        </if>
    </sql>

    <insert id="insert" parameterType="com.yeexang.community.pojo.po.Notification">
        insert into y_c_notification values (<include refid="Notification"/>)
    </insert>

    <delete id="delete" parameterType="com.yeexang.community.pojo.po.Notification">
        update from y_c_notification n set del_flag = 1
        <where>
            <include refid="where_condition"/>
        </where>
    </delete>

    <update id="update" parameterType="com.yeexang.community.pojo.po.Notification">
        update y_c_notification n set del_flag = 1
        <set>
            <include refid="set_condition"/>
        </set>
        <where>
            <include refid="where_condition"/>
        </where>
    </update>

    <select id="select" parameterType="com.yeexang.community.pojo.po.Notification" resultType="com.yeexang.community.pojo.po.Notification">
        select <include refid="y_c_notification"/> from y_c_notification n
        <where>
            <include refid="where_condition"/>
        </where>
    </select>

</mapper>